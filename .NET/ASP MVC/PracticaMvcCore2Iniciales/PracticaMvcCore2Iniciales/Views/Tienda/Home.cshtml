@using System.Text.Json
@model IEnumerable<PracticaMvcCore2Iniciales.Models.Libro>

@{
    ViewData["Title"] = "Home";
    string? carrito = Context.Session.GetString("CARRITO");
    List<string> idLibros = new List<string>();
    @if(carrito != null){
        idLibros = JsonSerializer.Deserialize<List<string>>(carrito);
    }
}

<h1>Libros</h1>
@if(Model != null)
{
    <div class="container-fluid">
        @foreach (Libro libro in Model)
        {                
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top"  src="~/images/@libro.Portada" data-holder-rendered="true" style="height: 225px; width: 100%; display: block;">
                <div class="card-body">
                    <p class="card-text">@libro.Titulo</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                           @if(idLibros.Contains(libro.LibroId.ToString()))
                            {
                                <button class="btn btn-outline-danger" onclick="DeleteLibroCarrito(this, @libro.LibroId)">Eliminar del carrito</button>
                            }
                            else
                            {
                                <button class="btn btn-outline-succes" onclick="AyadirLibroCarrito(this, @libro.LibroId)">Añadr al carrito</button>
                            }
                        </div>
                        <small class="text-muted">@libro.Precio | @libro.Autor</small>
                    </div>
                </div>
            </div>
        </div>                
        }
    </div>
}
else
{
    <h1>No hay libros</h1>
}

@section Scripts{
    <script>

        function DeleteLibroCarrito(button, id) {
            $.ajax({
                url: '/Tienda/DeleteLibroCarrito?idLibro=' + id,
                type: 'GET',
                processData: false,
                contentType: false,
                success: function (response) {
                    $(button).replaceWith('<button class="btn btn-sm btn-outline-success" onclick="AyadirLibroCarrito(this, ' + id + ')">Añadir al carrito</button>');
                }
            });
        }

        function AyadirLibroCarrito(button, id) {
            $.ajax({
                url: '/Tienda/AyadirLibroCarrito?idLibro=' + id,
                type: 'GET',
                processData: false,
                contentType: false,
                success: function (response) {
                    $(button).replaceWith('<button class="btn btn-sm btn-outline-danger" onclick="DeleteLibroCarrito(this, ' + id + ')">Eliminar del carrito</button>');
                }
            });
        }

        
    </script>
}