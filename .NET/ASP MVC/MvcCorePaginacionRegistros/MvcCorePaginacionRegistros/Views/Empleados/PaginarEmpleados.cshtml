@model IEnumerable<MvcCorePaginacionRegistros.Models.Empleado>

@{
    ViewData["Title"] = "PaginarEmpleados";
}

<h1>PaginarEmpleados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
        </tr>
}
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-action="PaginarEmpleados" asp-controller="Empleados"
               asp-route-posicion="@ViewData["BACKWARD"]">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="PaginarEmpleados" asp-controller="Empleados"
               asp-route-posicion="@ViewData["ACTUAL"]">@ViewData["ACTUAL"]</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="PaginarEmpleados" asp-controller="Empleados"
               asp-route-posicion="@ViewData["FORWARD"]">@ViewData["FORWARD"]</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="PaginarEmpleados" asp-controller="Empleados"
               asp-route-posicion="@ViewData["LAST"]">...@ViewData["LAST"]</a>
        </li>
    </ul>
</nav>